<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    cardview:cardCornerRadius="4dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_menu_order"
            android:layout_gravity="center"
            android:layout_width="80sp"
            android:layout_height="70sp"
            android:background="#2d2d2d"/>
        <TextView
            android:id="@+id/name_menu_order"
            android:textColor="#2d2d2d"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingLeft="10sp"
            android:gravity="center_vertical"
            android:layout_width="145sp"
            android:layout_height="match_parent"
            android:text="menu name"/>

        <TextView
            android:id="@+id/txt_sl"
            android:layout_width="30sp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="1"
            android:textColor="#EC7171"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/gia_menu_order"
            android:textColor="#EC7171"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="75sp"
            android:layout_height="match_parent"
            android:text="giamenu"/>

        <ImageButton
            android:id="@+id/btn_delete_menu_order"
            android:src="@drawable/delete"
            android:background="#EAF8DA"
            android:paddingRight="40sp"
            android:layout_width="80sp"
            android:layout_height="match_parent" />

    </LinearLayout>

</android.support.v7.widget.CardView>